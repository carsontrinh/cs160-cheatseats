<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_wrapper"
    android:foreground="?android:attr/selectableItemBackground"
    android:divider="@android:color/transparent"
    android:clipToPadding="false"
    android:clipChildren="false"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="false"
    app:cardCornerRadius="8dp"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="16dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/space_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                app:srcCompat="@drawable/crowded_low"/>

            <TextView
                android:id="@+id/space_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/space_status"
                android:textSize="18sp"
                android:text="Main Stacks" />

            <TextView
                android:id="@+id/space_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/space_status"
                android:layout_below="@+id/space_name"
                android:textSize="12sp"
                android:text="Library" />

            <ImageView
                android:id="@+id/expand_collapse"
                android:layout_width="27dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_round_expand_more_24px"
                android:scaleType="centerCrop"

                android:clickable="true"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_space_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>