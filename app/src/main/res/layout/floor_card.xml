<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/upper_filter_card"
    android:foreground="?android:attr/selectableItemBackground"
    android:divider="@android:color/transparent"
    android:clipToPadding="false"
    android:clipChildren="false"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false"
    app:cardCornerRadius="0dp"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/floor_border"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/floor_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                app:srcCompat="@drawable/small_crowded_low"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/floor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/floor_status"
                android:textSize="14sp"
                android:textColor="@color/grey_theme"
                android:text="Floor 1" />

            <ImageView
                android:id="@+id/power_status"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="0dp"
                app:srcCompat="@drawable/ic_round_power_24px" />

            <ImageView
                android:id="@+id/food_status"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/power_status"
                app:srcCompat="@drawable/ic_round_fastfood_24px" />

            <ImageView
                android:id="@+id/noise_status"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/food_status"
                app:srcCompat="@drawable/ic_round_volume_off_24px" />

            <ImageView
                android:id="@+id/cellular_status"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/noise_status"
                app:srcCompat="@drawable/ic_round_network_cell_24px" />




        </RelativeLayout>

</android.support.v7.widget.CardView>